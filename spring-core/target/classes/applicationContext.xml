<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<context:component-scan base-package="com.ananya"/>
	<bean id="xmlJdbcConnection" class="com.ananya.springusingspringboot.xml.XmlJdbcConnection">
		<!-- collaborators and configuration for this bean go here -->
	</bean>

	<bean id="xmlPersonDAO" class="com.ananya.springusingspringboot.xml.XmlPersonDAO">
		<property name="xmlJdbcConnection" ref="xmlJdbcConnection" />
	</bean>

</beans>